---
interface Props {
  base: string;
}

const { base } = Astro.props;
import { SunIcon, MoonIcon, MenuIcon } from "../icons";
---

<nav
  class="md:hidden glass-nav p-4 flex items-center justify-between print:hidden"
>
  <a
    href={base}
    class="font-bold text-lg tracking-tight bg-clip-text text-transparent bg-gradient-to-r from-cyan-500 to-purple-500"
    >Continuum Flow</a
  >
  <div class="flex items-center gap-4">
    <button
      id="theme-toggle-mobile"
      class="p-2 rounded-lg hover:bg-black/5 dark:hover:bg-white/10"
      aria-label="Toggle theme"
    >
      <SunIcon class="w-5 h-5 dark:hidden" />
      <MoonIcon class="w-5 h-5 hidden dark:block" />
    </button>
    <button
      id="menu-toggle"
      class="p-2 rounded-lg hover:bg-black/5 dark:hover:bg-white/10"
    >
      <MenuIcon />
    </button>
  </div>
</nav>
