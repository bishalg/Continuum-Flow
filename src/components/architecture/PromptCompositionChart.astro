---
// Prompt Token Composition Chart
// Print-optimized: Light theme colors, page-break control
---

<div
  class="prompt-chart-container bg-white dark:bg-slate-900 p-6 rounded-2xl shadow-lg border border-slate-100 dark:border-white/10 my-8 not-prose"
>
  <h3 class="font-bold text-slate-800 dark:text-white mb-2 print:text-black">
    Prompt Token Composition
  </h3>
  <p
    class="text-xs text-slate-500 dark:text-slate-400 mb-6 print:text-slate-600"
  >
    How the Architecture utilizes the context window.
  </p>
  <div class="chart-wrapper">
    <canvas id="promptCompositionChart"></canvas>
  </div>
</div>

<style>
  .prompt-chart-container {
    page-break-inside: avoid;
    break-inside: avoid;
  }

  .chart-wrapper {
    position: relative;
    width: 100%;
    max-width: 100%;
  }

  @media print {
    .prompt-chart-container {
      background: white !important;
      border: 1px solid #e5e7eb !important;
      box-shadow: none !important;
      padding: 16px !important;
      margin: 16px 0 !important;
    }

    .chart-wrapper {
      max-height: 280px;
    }

    .chart-wrapper canvas {
      max-width: 100% !important;
      height: auto !important;
    }
  }
</style>

<script>
  import Chart from "chart.js/auto";

  document.addEventListener("DOMContentLoaded", () => {
    // Chart Defaults - Print-friendly dark colors
    Chart.defaults.font.family = "'Inter', sans-serif";
    Chart.defaults.color = "#374151"; // Darker gray for better print contrast

    const commonOptions = {
      responsive: true,
      maintainAspectRatio: true,
      aspectRatio: 1.8, // Slightly wider for horizontal bar chart
      plugins: {
        tooltip: { padding: 12, cornerRadius: 8 },
        legend: {
          position: "bottom" as const,
          labels: {
            usePointStyle: true,
            padding: 20,
            color: "#1f2937", // Dark text for print
          },
        },
      },
    };

    const ctx1 = document.getElementById(
      "promptCompositionChart",
    ) as HTMLCanvasElement | null;
    if (ctx1) {
      new Chart(ctx1, {
        type: "bar",
        data: {
          labels: [
            "Scene Action",
            "Style Defs",
            "Character Traits",
            "Narrative State",
            "Camera Info",
          ],
          datasets: [
            {
              label: "Token Usage %",
              data: [35, 15, 20, 20, 10],
              // Print-friendly colors with good contrast on white
              backgroundColor: [
                "#0284c7", // Sky-600: Scene Action
                "#d97706", // Amber-600: Style Defs
                "#ea580c", // Orange-600: Character Traits
                "#0d9488", // Teal-600: Narrative State
                "#4f46e5", // Indigo-600: Camera Info
              ],
              borderRadius: 4,
              barThickness: 28,
            },
          ],
        },
        options: {
          ...commonOptions,
          indexAxis: "y" as const,
          scales: {
            x: {
              grid: { display: false },
              ticks: { color: "#374151" },
            },
            y: {
              grid: { display: false },
              ticks: { color: "#374151" },
            },
          },
        },
      });
    }
  });
</script>
